extends iframe-layout
block mainContent
  div(id='container')
    h1=Module
    style.
      .risktab { padding: 10px; font-size:120%}
      .container {font-size: 120%}
    div#round 
    div#results In this round each group made...
    br
    table(border='1px solid', width="50%", font-size="40%")
      tr
        td.risktab Your group 
          span#myGroup (Klee)
        td.risktab 
          span#myGroupAnswers 0
          span  answers
      tr
        td.risktab Other group 
          span#otherGroup (Kandinsky)
        td.risktab 
          span#otherGroupAnswers 0
          span  answers
    br
    div The winner of this round is
      b#winnerGroup 
    br
    br
    h2 Earnings
    table(border='1px solid', width="50%", font-size="40%")
      tr
        td.risktab Your group 
          span#myGroup2 (Klee)
        td.risktab 
          span#myGroupTokens 0
          span  tokens
      tr
        td.risktab Other group 
          span#otherGroup2 (Kandinsky)
        td.risktab 
          span#otherGroupTokens 0
          span  tokens
    
    br
    div When you finish reviewing the resutls, click "Go Next"
    #button(style='padding-top: 20px')
      input(type='button', id='goNext', value="Go Next", class='btn btn-lg btn-primary')
    
